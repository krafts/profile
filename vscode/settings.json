{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "editor.fontFamily": "FiraCode-Retina",
    //"editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.lineHeight": 21,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        80
    ],
    "breadcrumbs.enabled": false,
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "gitlens.defaultDateStyle": "absolute",
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.trimTrailingWhitespace": true,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingOvertype": "never",
    "debug.console.fontFamily": "FiraCode-Retina",
    "python.jediEnabled": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.autoSurround": "never",
    "window.zoomLevel": 1,
    "explorer.openEditors.visible": 0,
    "editor.autoClosingQuotes": "never",
    "editor.fontSize": 14,
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "gitlens.advanced.abbreviatedShaLength": 8,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.blame.dateFormat": "YYYY-MM-DDTHH:mm:ssZ",
    "gitlens.currentLine.dateFormat": "YYYY-MM-DDTHH:mm:ssZ",
    "gitlens.codeLens.scopes": [
        "containers"
    ],
    "daml.telemetry": "Disable",
    /*  disable editor actions
    *   https://github.com/Microsoft/vscode/issues/46403
    */
    // "gitlens.menus": {
    //     "editorGroup": {
    //         "blame": false,
    //         "compare": false
    //     },
    // },
    "customizeUI.stylesheet": {
        ".editor-actions": "display: none !important;",
    },
    "workbench.startupEditor": "none",
    "workbench.editor.tabCloseButton": "off",
    "customizeUI.font.monospace": "FiraCode-Retina",
    "customizeUI.font.regular": "FiraCode-Retina",
    "workbench.activityBar.visible": false,
}
